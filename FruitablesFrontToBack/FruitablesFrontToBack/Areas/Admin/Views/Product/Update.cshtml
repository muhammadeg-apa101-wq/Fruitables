@model UpdateProductVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update</h4>
            <p class="card-description">
                Update Product
            </p>
            <form class="forms-sample" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Image</label>
                    <input asp-for="Image" class="form-control" id="exampleInputName1">
                    <span class="text-danger my-1" asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span class="text-danger my-1" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">
                        Description
                    </label>
                    <input asp-for="Description" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span class="text-danger my-1" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Price</label>
                    <input asp-for="Price" class="form-control" id="exampleInputName1" placeholder="Price">
                    <span class="text-danger my-1" asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Category</label>
                    <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
                    <span class="text-danger my-1" asp-validation-for="CategoryId"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a class="btn btn-light" asp-action="Index">Back</a>
            </form>
        </div>
    </div>
</div>
