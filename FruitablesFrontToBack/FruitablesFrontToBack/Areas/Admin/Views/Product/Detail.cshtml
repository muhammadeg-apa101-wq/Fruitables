@model DetailProductVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create</h4>
            <p class="card-description">
                Product Detail
            </p>
            <form class="forms-sample" asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="form-group">
                        <label> Image</label><br />
                        <img src="~/img/@Model.Photo" width="200" height="200" />
                    </div>
                </div>
                <div class="form-group">
                    <label>@Model.Name</label>

                </div>
                <div class="form-group">
                    <label for="exampleInputName1">
                        @Model.Description
                    </label>

                </div>
                <div class="form-group">
                    <label>@Model.Price $</label>

                </div>
                <div class="form-group">
                    <label>@Model.CategoryName</label>

                </div>
                <a class="btn btn-light" asp-action="Index">Back</a>
            </form>
        </div>
    </div>
</div>
