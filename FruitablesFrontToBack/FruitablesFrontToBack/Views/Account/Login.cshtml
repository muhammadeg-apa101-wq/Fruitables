@model LoginVM
<div class="container" style="margin: auto">
    <form method="post">
        <h3>Register</h3>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input asp-for="UsernameOrEmail" class="form-control" placeholder="Name">
            <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Password" type="password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>